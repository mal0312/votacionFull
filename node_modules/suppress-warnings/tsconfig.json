{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "es2020",
        "baseUrl": "src",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "paths": {},
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/util/@types"
        ]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "out",
        "test",
        "tmp",
        "logs"
    ]
}
